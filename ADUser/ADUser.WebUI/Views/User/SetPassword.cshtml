@model string
@{
    Layout = null;
}

<div class="modal-content">
    <div class="modal-header">
        <button class="close" aria-hidden="true" data-dismiss="modal" type="button">×</button>
        <h4 class="modal-title" id="modal-login-label">@ViewBag.Title</h4>
    </div>
    <div class="modal-body">
        <div class="form">
            <form id="amy-form" method="post" action="@Url.Action("SetPassword", "User")" class="form-horizontal">
                <div class="form-body pal">
                    <div class="form-group">
                        <label class="col-md-2 control-label">账号</label>
                        <div class="col-md-10">
                            <input type="text" name="Account" value="@Model" readonly="readonly" class="form-control required" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">密码</label>
                        <div class="col-md-10">
                            <input type="text" name="Password" class="form-control required" />
                        </div>
                    </div>
                </div>
                <div class="form-actions pal">
                    <div class="form-group mbn">
                        <div class="col-md-offset-2 col-md-6">
                            <button type="submit" class="btn btn-primary sure">确定</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
